{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2020",
    "target": "es2017",
    "outDir": "./dist/esm",
    "declaration": false,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/__tests__/**",
    "dist",
    "node_modules",
    "tests"
  ]
} 